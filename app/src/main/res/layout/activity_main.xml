<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zozo.notificationtool.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" android:text="Unexpandable Notifications"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button android:id="@+id/pull_down" android:layout_width="170dp"
        android:layout_height="wrap_content" android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" android:text="@string/send_btn_pulldown"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button android:id="@+id/headsup" android:layout_width="170dp"
        android:layout_height="wrap_content" android:layout_marginTop="8dp"
        android:layout_marginRight="8dp" android:text="@string/send_btn_headsup"
        app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button android:id="@+id/custom" android:layout_width="170dp"
        android:layout_height="wrap_content" android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp" android:text="@string/send_btn_custom"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toBottomOf="@+id/pull_down" />

    <Button android:id="@+id/headsup_fullintent" android:layout_width="170dp"
        android:layout_height="wrap_content" android:layout_marginTop="12dp"
        android:layout_marginRight="8dp" android:text="@string/send_btn_headsup_fullintent"
        app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toBottomOf="@+id/headsup"
        android:visibility="gone"/>

    <Button android:id="@+id/expand_pull_down" android:layout_width="170dp"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" android:text="@string/send_btn_pulldown"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button android:id="@+id/expand_headsup" android:layout_width="170dp"
        android:layout_height="wrap_content" android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" android:text="@string/send_btn_headsup"
        app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button android:id="@+id/expand_custom" android:layout_width="170dp"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" android:text="@string/send_btn_custom"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/expand_pull_down" />

    <TextView android:id="@+id/textView3" android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" android:layout_marginTop="32dp"
        android:text="Expandable Notifications" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/custom" />

    <android.support.constraint.Guideline android:id="@+id/guideline"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical" app:layout_constraintGuide_begin="192dp" />


</android.support.constraint.ConstraintLayout>
